<div class="container">
  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-12">
        <h2>Admins</h2>
        <%= link_to 'Create Admin', new_admin_admin_path, class: "btn btn-primary btn-sm pull-right" %>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="bs-component">
            <table class="table table-striped table-hover ">
              <thead>
                <tr class='success'>
                  <th>#</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Created At</th>
                  <th></th>
                  <th></th>
                  <th>Actions</th>
                  <th></th>
                </tr>
              </thead>
              <% if @admins.empty? %>
                <p class="lead text-info">No admins found!</p>
              <% else %>
                <%= render @admins %>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
