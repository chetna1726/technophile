<div class="bs-docs-section">
  <div class="row">
    <% if @admin.errors %>
      <ul>
        <% @admin.errors.full_messages.each do |msg| %>
          <li class="text-danger"><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="col-lg-6">
      <div class="well bs-component">
        <%= form_for [:admin, @admin], html: { class: "form-horizontal" } do |f| %>
          <fieldset>
            <legend>Enter admin details</legend>
            <div class="form-group">
              <%= f.label :name, 'Name *:', class: "col-lg-3 control-label" %>
              <div class="col-lg-9">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :email, 'Email *:', class: "col-lg-3 control-label" %>
              <div class="col-lg-9">
                <%= f.text_field :email, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, 'Password *:', class: "col-lg-3 control-label" %>
              <div class="col-lg-9">
                <%= f.text_field :password, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, 'Password confirmation *:', class: "col-lg-3 control-label" %>
              <div class="col-lg-9">
                <%= f.text_field :password_confirmation, class: "form-control" %>
              </div>
            </div>
            <div class="col-lg-9 col-lg-offset-3">
              <% if @admin.new_record? %>
                <%= f.submit 'Create', class: "btn btn-primary" %>
              <% else %>
                <%= f.submit 'Update', class: "btn btn-primary" %>
              <% end %>
              <%= link_to 'Back', admin_admins_path, class: "btn btn-primary btm-sm" %>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
