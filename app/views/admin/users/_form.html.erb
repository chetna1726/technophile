<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="well bs-component">
        <%= form_for @user, url: contact_us_path, html: { class: "form-horizontal" } do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.label :name, 'Name *:', class: "col-lg-4 control-label" %>
              <div class="col-lg-8">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :email, 'Email *:', class: "col-lg-4 control-label" %>
              <div class="col-lg-8">
                <%= f.text_field :email, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :contact_number, 'Contact Number:', class: "col-lg-4 control-label" %>
              <div class="col-lg-8">
                <%= f.text_field :contact_number, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :message, 'Message *:', class: "col-lg-4 control-label" %>
              <div class="col-lg-8">
                <%= f.text_area :message, rows: 8, class: "form-control" %>
              </div>
            </div>
            <div class="col-lg-8 col-lg-offset-1">
              <%= f.submit 'Submit', class: "btn btn-primary" %>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
