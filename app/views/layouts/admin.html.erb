<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Technophile Infotech</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="bs-docs-section clearfix">
      <div class="bs-component">
        <div class="navbar navbar-default">
          <div class="container">
            <div class="navbar-header">
              <button typeclass: "btn btn-primary btn-xs"="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to "Technophile Infotech", root_path, class: "navbar-brand" %>
            </div>
            <% if current_admin %>
              <div class="navbar-collapse collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                  <li><%= link_to "Admins", admin_admins_path, class: ('page-active' if (root_path)) %></li>
                  <li><%= link_to "Contact Requests", contact_requests_path, class: ('page-active' if (root_path)) %></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <li class="text-success">
                    <%= link_to "Welcome #{ current_admin.name }!", admin_admin_path(current_admin), class: "#{ ((current_admin)) }" if current_admin %>
                  </li>
                  <li><%= link_to 'Sign Out', logout_path, method: :delete, class: "btn btn-primary btn-xs" %></li>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <%= render "layouts/flash_messages" %>
    <%= yield %>
  </body>
</html>
