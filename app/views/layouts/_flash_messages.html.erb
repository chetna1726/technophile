<div class="container" id="flash-message">
  <% if notice %>
    <p class="alert alert-dismissable alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= notice %>
    </p>
  <% elsif alert %>
    <p class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= alert %>
    </p>
  <% end %>
</div>
